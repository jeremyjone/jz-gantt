@import '../../../styles/index.styl'
@import '../../../styles/light.styl'

.gt-gantt-row
    width 100%
    position relative
    background-color $default-content-background-color
    border-bottom 1px solid $default-content-border-color
    background-image linear-gradient(270deg, $default-content-border-color 1px, transparent 0)

.gt-gantt-content-border-dark
    border-color gtContentBorderDark()
    background-image linear-gradient(270deg, @border-color 1px, transparent 0)